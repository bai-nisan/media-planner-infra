# Temporal Environment Configuration
# Copy this to .env.temporal.local and customize for your environment

# Database Configuration
POSTGRES_DB=temporal
POSTGRES_USER=temporal
POSTGRES_PASSWORD=temporal
POSTGRES_HOST=temporal-postgres
POSTGRES_PORT=5432

# Temporal Server Configuration
TEMPORAL_ADDRESS=temporal-server:7233
TEMPORAL_WEB_ADDRESS=temporal-web:8088
TEMPORAL_NAMESPACE=default

# Elasticsearch Configuration (for advanced visibility)
ELASTICSEARCH_URL=http://temporal-elasticsearch:9200
ELASTICSEARCH_VERSION=v7

# Security Configuration
TEMPORAL_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://lovable.dev,https://*.lovable.app

# Performance Settings
TEMPORAL_HISTORY_RPS=3000
TEMPORAL_FRONTEND_RPS=1200

# Development Settings
TEMPORAL_LOG_LEVEL=info
TEMPORAL_METRICS_PORT=9090

# Worker Configuration
MAX_CONCURRENT_WORKFLOW_TASKS=1000
MAX_CONCURRENT_ACTIVITY_TASKS=1000

# Retention Settings (in hours)
WORKFLOW_RETENTION_HOURS=168  # 7 days for development 